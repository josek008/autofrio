<div class="form-group">
	<%= f.label "Nombre", class: "col-md-4 control-label" %>
	<div class="col-md-8">
		<%= f.text_field :name, class: "form-control", placeholder:"Incluye el nombre de la linea", required: true %>
	</div>
</div>

<div class="form-group">
	<%= f.label "Pertenece a marca", class: "col-md-4 control-label" %>
	<div class="col-md-8">
		<%= f.collection_select :brand_id, @brands, :id, :name, {}, { class: "form-control" } %>
	</div>
</div>

<div class="form-group">
	<%= f.label "Imagen", class: "col-md-4 control-label" %>
	<div class="col-md-8">
		<% if l.photo.exists? %>
			<%= image_tag l.photo.url(:medium) %>
		<% end %>
		<%= f.file_field :photo %>
	</div>
</div>

<div class="form-group">
	<div class="col-md-offset-4 col-md-8">
		<%= f.submit "Confirmar", class: "btn btn-lg btn-primary" %>
	</div>
</div>