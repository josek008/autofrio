<% provide(:title, 'Editar Noticia') %>

<div class="row">
	<div class="span4 offset3">
		<%= form_for @post, class: "form-horizontal", :html => { :multipart => true } do |f| %>
		<%= render 'shared/error_messages', object: f.object %>
		<%= render 'fields', :f => f, :p => @post %>
		<div class="actions">
			<%= f.submit "Guardar", class: "btn btn-large btn-primary" %>
		</div>
		<% end %>
	</div>
</div>