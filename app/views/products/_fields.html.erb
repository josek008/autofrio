<div class="control-group">
	<%= f.label "Referencia", class: "control-label" %>
	<%= f.text_field :reference, placeholder:"Incluye la referencia de este producto", required: true %>
	<%= f.label "Comentarios", class: "control-label" %>
	<%= f.text_field :comments, placeholder:"Incluye algunos comentarios", required: true %>
	<%= f.label "Pertenece a la categoria:", class: "control-label" %>
	<%= f.collection_select :category_id, @categories, :id, :name %>
	<%= f.label "Codigos equivalentes: (separados por comas)", class: "control-label" %>
	<%= f.text_field :tag_list %>
	<%= f.label "Selecciona las lineas compatibles", class: "control-label" %>
	<%= f.collection_select :line_ids, @lines, :id, :line_with_brand, {}, {:multiple => true} %>
	<%= f.label "Imagen", class: "control-label" %>
	<% if p.photo.exists? %>
	<%= image_tag p.photo.url(:medium) %>
	<% end %>
	<%= f.file_field :photo %>
</div>
