<tr>
	<td><%= search_result.category.name %></td>
	<td><%= format_lines(search_result) %></td>
	<td><%= search_result.comments %></td>
	<td><%= search_result.reference %></td>
	<td><%= link_to "#lb-#{search_result.id}", :data => { :toggle => "lightbox" } do %>
		<%= image_tag search_result.photo.url(:thumb) %>
		<% end %>
	</td>
	<div id="<%= "lb-#{search_result.id}" %>" class="lightbox hide fade" tabindex="-1" role="dialog" aria-hidden="true">
		<div class="lightbox-content">
			<%= image_tag search_result.photo.url(:medium) %>
		</div>
	</div>
	
	<td>
		<div class="btn-group">
			<button class="btn dropdown-toggle" data-toggle="dropdown">
				<i class="icon-cog"></i>
				<span class="caret"></span>
			</button>
			<ul class="dropdown-menu">

				<li><%= link_to 'Ver', search_result %></li>
				<% if signed_in? %>
				<li><%= link_to 'Editar', edit_product_path(search_result) %></li>
				<li><%= link_to 'Eliminar', search_result, method: :delete,
				data: {confirm: "Â¿Realmente desea eliminar este producto?"} %></li>
				<% end %>
			</ul>
		</div>
	</td>
</tr>