<% provide(:title, 'Marcas') %>
<h1>Marcas</h1>
<table class="table table-hover table-condensed">
	<thead>
		<th>Nombre</th>
		<th>Logo</th>
		<th># de Productos</th>
		<th>Acciones</th>
	</thead>
	<tbody>
		<% if @brands.any? %>
		<%= render @brands %>
		<% else %>
		<caption>No existen marcas creadas.</caption>
		<% end %>
	</tbody>
</table>

<ul class="nav nav-pills">
	<li><%= link_to 'Crear nueva marca', new_brand_path %></li>
</ul>

