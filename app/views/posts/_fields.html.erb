<div class="control-group">
	<%= f.label "Titulo", class: "control-label" %>
	<%= f.text_field :title, placeholder:"Incluye el titulo de esta noticia", required: true %>
	<%= f.label "Contenido", class: "control-label" %>
	<%= f.text_field :message, placeholder:"Incluye el contenido", required: true %>
	<%= f.label "Orden", class: "control-label" %>
	<%= f.text_field :order, placeholder:"Incluye el orden", required: true %>
	
	<%= f.label "Imagen", class: "control-label" %>
	<% if p.image.exists? %>
	<%= image_tag p.image.url(:large) %>
	<% end %>
	<%= f.file_field :image %>
</div>
