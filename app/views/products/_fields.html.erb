<div class="form-group">
	<%= f.label "Referencia", class: "col-md-4 control-label" %>
	<div class="col-md-8">
		<%= f.text_field :reference, class: "form-control", placeholder: "Incluye la referencia de este producto", required: true %>
	</div>
</div>

<div class="form-group">
	<%= f.label "Comentarios", class: "col-md-4 control-label" %>
	<div class="col-md-8">
		<%= f.text_field :comments, class: "form-control", placeholder: "Incluye algunos comentarios", required: true %>
	</div>
</div>

<div class="form-group">
	<%= f.label "Pertenece a la categoria", class: "col-md-4 control-label" %>
	<div class="col-md-8">
		<%= f.collection_select :category_id, @categories, :id, :name, {}, { class: "form-control" } %>
	</div>
</div>

<div class="form-group">
	<%= f.label "Selecciona las lineas compatibles", class: "col-md-4 control-label" %>
	<div class="col-md-8">
		<%= f.collection_select :line_ids, @lines, :id, :large_name, {}, { class: "form-control multiselect", multiple: true } %>
	</div>
</div>

<div class="form-group">
	<%= f.label "Codigos equivalentes (separados por comas)", class: "col-md-4 control-label" %>
	<div class="col-md-8">
		<%= f.text_field :tag_list, class: "form-control" %>
	</div>
</div>

<div class="form-group">
	<%= f.label "Imagen", class: "col-md-4 control-label" %>
	<div class="col-md-8">
		<% if p.photo.exists? %>
		<%= image_tag p.photo.url(:medium) %>
		<% end %>
		<%= f.file_field :photo %>
	</div>
</div>

<div class="form-group">
	<div class="col-md-offset-4 col-md-8">
		<%= f.submit "Confirmar", class: "btn btn-lg btn-primary" %>
	</div>
</div>
