<div class="control-group">
	<%= f.label "Nombre", class: "control-label" %>
	<%= f.text_field :name, placeholder:"Incluye el nombre de la categoria", required: true %>
	<%= f.label "Imagen", class: "control-label" %>
	<% if c.photo.exists? %>
	<%= image_tag c.photo.url(:medium) %>
	<% end %>
	<%= f.file_field :photo %>
</div>