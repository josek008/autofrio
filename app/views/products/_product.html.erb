<tr>
	<td><%= product.comments %></td>
	<td><%= product.reference %></td>
	<td><a href="<%= product.photo.url(:medium) %>" class="fancybox"><%= image_tag(product.photo.url(:thumb), class: "img-thumbnail") %></a></td>
	<td>
		<div class="btn-group">
			<button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
				<span class="caret"></span>
			</button>
			<ul class="dropdown-menu">
				<li><%= link_to 'Ver', product %></li>
				<% if signed_in? %>
				<li><%= link_to 'Editar', edit_product_path(product) %></li>
				<li><%= link_to 'Eliminar', product, method: :delete, data: { confirm: "Â¿Realmente desea eliminar este producto?" } %></li>
				<% end %>
			</ul>
		</div>
	</td>
</tr>