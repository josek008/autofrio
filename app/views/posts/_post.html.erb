<tr>
	<td><%= post.priority %></td>
	<td><%= post.title %></td>
	<td><%= post.message %></td>
	<td><%= image_tag post.image.url(:thumb) %></td>
	
	<td>
		<div class="btn-group">
			<button class="btn dropdown-toggle" data-toggle="dropdown">
				<i class="icon-cog"></i>
				<span class="caret"></span>
			</button>
			<ul class="dropdown-menu">

				<li><%= link_to 'Ver', post %></li>
				<% if signed_in? %>
				<li><%= link_to 'Editar', edit_post_path(post) %></li>
				<li><%= link_to 'Eliminar', post, method: :delete, data: {confirm: "Â¿Realmente desea eliminar esta noticia?"} %></li>
				<% end %>
			</ul>
		</div>
	</td>
</tr>