<!DOCTYPE html>
<html>
<head>
	<title><%= full_title(yield(:title)) %></title>
	<%= stylesheet_link_tag "application", media: "all" %>
	<%= javascript_include_tag "application" %>
	<%= csrf_meta_tags %>
	<%= render 'layouts/shim' %>
</head>
<body>
	<%= render 'layouts/header' %>
	<div id="content-area">
		<% unless yield(:title).blank? %>
		<div id="breadcrumb">
			<div class="container">
				<div class="row">
					<div class="col-md-9"><h2><%= yield(:title) %></h2></div>
					<div class="col-md-3"><%= render "shared/search_form" %></div>
				</div>
			</div>
		</div>
		<% end %>
		<div class="content">
			<div class="container">
				<% flash.each do |key, value| %>
				<%= content_tag(:div, value, class: "alert alert-#{key}") %>
				<% end %>
				<%= yield %>
			</div>
		</div>
	</div>
	<%= render 'layouts/footer' %>
</body>
</html>
