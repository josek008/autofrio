<div class="control-group">
	<%= f.label "Nombre", class: "control-label" %>
	<%= f.text_field :name, placeholder:"Incluye el nombre de la linea", required: true %>
	<%= f.label "Pertenece a marca:", class: "control-label" %>
	<%= f.collection_select :brand_id, @brands, :id, :name %>
	<%= f.label "Imagen", class: "control-label" %>
	<% if l.photo.exists? %>
	<%= image_tag l.photo.url(:medium) %>
	<% end %>
	<%= f.file_field :photo %>
</div>