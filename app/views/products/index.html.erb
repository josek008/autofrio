<% provide(:title, "#{@selected_category.name} - #{@selected_brand.name} - #{@selected_line.name}") %>

<%= form_tag cbrand_url, id: "filter_form" , method: "get" do |f| %>
<%= hidden_field :category, :id, :value => "#{@selected_category.id}" %>
<%= hidden_field :brand, :id, :value => "#{@selected_brand.id}" %>
<%= hidden_field :line, :id, :value => "#{@selected_line.id}" %>
<% end %>
<div class="row-fluid">
	<div class="span3">
		<div class="catalog-box">
			<h3>Busqueda</h3>
			<%= render "shared/search_form" %>
		</div>
		<div class="catalog-box">
			<ul>
				<h3>Categorias</h3>
				<% @categories.each do |c| %>
				<li><%= link_to "#{c.name}", "#", data: { category: c.id } %></li>
				<% end %>
			</ul>
		</div>
	</div>
	<div class="catalog-box span9">
		<table class="table table-hover table-condensed" id="products-table">
			<thead>
				<th>Descripcion</th>
				<th>Referencia</th>
				<th>Imagen</th>
				<th>Acciones</th>
			</thead>
			<tbody>
				<% if @products.any? %>
				<%= render @products %>
				<% end %>
			</tbody>
		</table>

		<ul class="nav nav-pills">
			<li><%= link_to 'Crear nuevo producto', new_product_path %></li>
		</ul>
	</div>
</div>
