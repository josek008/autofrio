<% provide(:title, '¡Bienvenido a Autofrío Importaciones SAS!') %>

<% if @posts.any? %>
<div id="showcase" class="carousel slide">
	<ol class="carousel-indicators">
		<% @posts.each_with_index do |post, index| %>
		<% if index == 0 %>
		<li data-target="#showcase" data-slide-to="<%="#{index}" %>" class="active"></li>
		<% else %>
		<li data-target="#showcase" data-slide-to="<%="#{index}" %>"></li>
		<% end %>
		<% end %>
	</ol>
	<div class="carousel-inner">
		<% @posts.each_with_index do |post, index| %>
		<% if index == 0 %>
		<div class="item active">
		<% else %>
		<div class="item">
		<% end %>
			<%= image_tag post.image.url(:large) %>
		</div>
		<% end %>
	</div>
	<a class="carousel-control left" href="#showcase" data-slide="prev">&lsaquo;</a>
  	<a class="carousel-control right" href="#showcase" data-slide="next">&rsaquo;</a>
</div>
<% end %>
